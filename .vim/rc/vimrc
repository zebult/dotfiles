let s:InsertGroupFlag = 0

augroup InsertGroup
  autocmd!
  autocmd InsertEnter * call InitInsertGroup()
augroup END

function! InitInsertGroup() abort
  if s:InsertGroupFlag == 0
    let s:InsertGroupFlag = 1

    call s:source_rc('macro.rc.vim')
  endif
endfunction

